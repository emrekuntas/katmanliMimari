@using test.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="limiter">

    <div class="container-login100" style="background-image: url('../../Login_v/images/img-01.jpg');">
        <div class="wrap-login100 p-t-190 p-b-30">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                <span class="login100-form-title p-t-20 p-b-45">
                    İnsan Kaynakları Admin
                </span>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                    <div class="input-group-addon">
                        <span>
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "User Name", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    </div>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                        <div class="input-group-addon">
                            <span>
                                <i class="fa fa-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Paswoord", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="checkbox filled-in chk-col-pink ">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)

                    </div>

                    <div class="container-login100-form-btn p-t-10">

                        <input type="submit" value="Log in" class="btn btn-block bg-blue waves-blue" />
                    </div>

                    <div class="text-center w-full p-t-25 p-b-230 text-black">
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </div>
                    
                    }
                </div>
    </div>
</div>

