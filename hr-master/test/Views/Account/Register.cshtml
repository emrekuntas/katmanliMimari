@model test.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";

}
<div class="row clearfix">

    <div class="col-xs-12 ol-sm-12 col-md-12 col-lg-12">
        <div class="panel-group full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
            <!--Kullanıcı ekleme-->
            <div class="panel ">
                <div class="panel-heading panel-col-light" role="tab" id="headingOne_19">
                    <h4 class="panel-title">
                        <a class="collapsed" role="button" data-toggle="collapse" href="#collapseOne_19" aria-expanded="false" aria-controls="collapseOne_19">
                            <i class="material-icons">perm_contact_calendar</i>
                            Kullanıcı Ekle
                        </a>
                    </h4>
                </div>
                <div id="collapseOne_19" class="panel-collapse collapse " role="tabpanel" aria-labelledby="headingOne_19">
                    <div class="panel-body">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                               
                                <div class="body">
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })

                                            </div>
                                            @Html.ValidationMessageFor(m => m.FirstName, "")
                                        </div>

                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.LastName, "")
                                        </div>

                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Adress", @class = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Email, "")
                                        </div>


                                        <div class="form-group">
                                            @foreach (var item in (List<SelectListItem>)ViewBag.Roles)
                                            {
                                                <input type="radio" name="UserRole" id="@item.Text" value="@item.Text" class="with-gap">
                                                <label for="@item.Text">@item.Text</label>
                                            }

                                        </div>
                                        @Html.ValidationMessageFor(m => m.UserRole, "")

                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Password, "")
                                        </div>
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "")
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" class="btn btn-block btn-lg bg-danger waves-effect" value="Submit" />
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel ">
                <div class="panel-heading panel-col-light" role="tab" id="headingTwo_19">
                    <h4 class="panel-title">
                        <a  role="button" data-toggle="collapse" href="#collapseTwo_19" aria-expanded="false" aria-controls="collapseTwo_19">
                            <i class="material-icons">folder_shared</i>
                            Kullanıcı Listesi
                        </a>
                    </h4>
                </div>
                <div id="collapseTwo_19" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo_19">
                    <div class="panel-body">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                            <div class="card">
                               
                                <div class="body ">
                                    <table class="table table-striped" style="counter-reset: rowNumber">
                                        <thead>
                                            <tr>

                                                <th>ADI</th>
                                                <th>SOYADI</th>
                                                <th>E-POSTA</th>
                                                <th>KULLANICI ROLÜ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.UsersViewModel)
                                            {
                                                <tr style="counter-increment: rowNumber">

                                                    <td>@item.Name</td>
                                                    <td>@item.Surname</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Role</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    

</div>
<!-- #END# Basic Validation -->



